generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserAccountType {
  CLIENT
  SERVICE_PROVIDER

  @@map("user_account_type")
}

model User {
  id          String          @id @default(uuid()) @db.Uuid
  nif         String          @unique
  name        String
  lastName    String          @map("last_name")
  email       String          @unique
  password    String
  typeAccount UserAccountType @map("type_account")

  serviceContracts ServiceContracts[]

  @@map("users")
}

model ProviderService {
  id          String          @id @default(uuid()) @db.Uuid
  nif         String          @unique
  name        String
  lastName    String          @map("last_name")
  email       String          @unique
  password    String
  typeAccount UserAccountType @map("type_account")

  Service          Service[]
  ServiceContracts ServiceContracts[]

  @@map("provider_services")
}

model Service {
  id          String @id @default(uuid()) @db.Uuid
  userId      String @map("user_id") @db.Uuid
  name        String
  description String
  value       Float

  providerService  ProviderService    @relation(fields: [userId], references: [id])
  serviceContracts ServiceContracts[]

  @@map("services")
}

model ServiceContracts {
  id              String @id @default(uuid()) @db.Uuid
  serviceClient   String @map("service_client") @db.Uuid
  serviceId       String @map("service_id") @db.Uuid
  providerService String @map("provider_service") @db.Uuid

  serviceClientId   User            @relation(fields: [serviceClient], references: [id])
  service           Service         @relation(fields: [serviceId], references: [id])
  providerServiceId ProviderService @relation(fields: [providerService], references: [id])

  @@map("service_contracts")
}
